{
  "name": "demoblaze-e2e-playwright",
  "version": "1.0.0",
  "description": "Demoblaze E2E testing framework with Playwright and TypeScript",
  "main": "index.js",
  "scripts": {
    "test": "playwright test",
    "test:headed": "playwright test --headed",
    "test:ui": "playwright test --ui",
    "test:debug": "playwright test --debug",
    "test:codegen": "playwright codegen",
    
    "test:smoke": "playwright test --config=playwright-smoke.config.ts",
    "test:dev": "playwright test --config=playwright-dev.config.ts",
    "test:regression": "playwright test --config=playwright-regression.config.ts",
    
    "test:chromium": "playwright test --project=chromium",
    "test:firefox": "playwright test --project=firefox",
    "test:webkit": "playwright test --project=webkit",
    "test:mobile": "playwright test --project=mobile-chrome --project=\"Mobile Safari\"",
    
    "test:shopping": "playwright test tests/shopping/",
    "test:user": "playwright test tests/user/",
    "test:product": "playwright test tests/product/",
    "test:demoblaze": "playwright test tests/demoblaze/",
    
    "test:jenkins": "playwright test --reporter=html --reporter=junit --retries=2",
    "test:jenkins:smoke": "playwright test tests/smoke/ --reporter=html --reporter=junit --retries=2",
    "test:jenkins:full": "playwright test --reporter=html --reporter=junit --retries=2",
    
    "report": "playwright show-report",
    "allure:generate": "allure generate allure-results --clean -o allure-report",
    "allure:open": "allure open allure-report",
    "allure:serve": "allure serve allure-results",
    "report:allure": "allure generate allure-results --clean && allure open",
    "report:summary": "node -e \"console.log('\\nðŸ“Š Opening custom summary report...\\n')\" && start test-results/summary.html || open test-results/summary.html || xdg-open test-results/summary.html",
    "report:all": "npm run report && npm run report:summary && npm run allure:serve",
    
    "lint": "eslint tests/**/*.ts --fix",
    "format": "prettier --write \"tests/**/*.ts\" \"*.ts\"",
    "format:check": "prettier --check \"tests/**/*.ts\" \"*.ts\"",
    "check": "npm run format:check && npm run lint",
    "prepare": "husky install"
  },
  "keywords": [
    "playwright",
    "e2e",
    "testing",
    "e-commerce",
    "typescript"
  ],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "devDependencies": {
    "@playwright/test": "^1.56.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "allure-playwright": "^3.4.1",
    "eslint": "^8.0.0",
    "husky": "^8.0.0",
    "prettier": "^3.0.0",
    "typescript": "^5.0.0"
  }
}
